<%- model_class = AcceptableContactPosition -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:position) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @acceptable_contact_positions.each do |acceptable_contact_position| %>
      <tr>
        <td><%= link_to acceptable_contact_position.id, acceptable_contact_position_path(acceptable_contact_position) %></td>
        <td><%= acceptable_contact_position.position %></td>
        <td><%=l acceptable_contact_position.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_acceptable_contact_position_path(acceptable_contact_position), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      acceptable_contact_position_path(acceptable_contact_position),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_acceptable_contact_position_path,
            :class => 'btn btn-primary' %>
