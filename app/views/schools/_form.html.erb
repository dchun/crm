<%= form_for @school, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @school.errors.any? %>
    <div class="alert fade in alert-error"><button class="close" data-dismiss="alert">Ã—</button>
      <p><%= pluralize(@school.errors.count, "error") %> prohibited this school from being saved:</p>

      <ul>
      <% @school.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="control-group">
    <%= f.label :district_id, "District", :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :district_id, District.order(:name), :id, :name, prompt: :blank %>    
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, "School Name", :class => 'control-label' %>
