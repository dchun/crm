<%- model_class = District -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:college_readiness_score) %></th>
      <th><%= model_class.human_attribute_name(:tested_ap) %></th>
      <th><%= model_class.human_attribute_name(:passed_ap) %></th>
      <th><%= model_class.human_attribute_name(:math_score) %></th>
      <th><%= model_class.human_attribute_name(:math_proficient) %></th>
      <th><%= model_class.human_attribute_name(:math_not_proficient) %></th>
      <th><%= model_class.human_attribute_name(:reading_score) %></th>
      <th><%= model_class.human_attribute_name(:reading_proficient) %></th>
      <th><%= model_class.human_attribute_name(:reading_not_proficient) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @districts.each do |district| %>
      <tr>
        <td><%= link_to district.id, district_path(district) %></td>
        <td><%= district.state %></td>
        <td><%= district.name %></td>
        <td><%= district.college_readiness_score %></td>
        <td><%= district.tested_ap %></td>
        <td><%= district.passed_ap %></td>
        <td><%= district.math_score %></td>
        <td><%= district.math_proficient %></td>
        <td><%= district.math_not_proficient %></td>
        <td><%= district.reading_score %></td>
        <td><%= district.reading_proficient %></td>
        <td><%= district.reading_not_proficient %></td>
        <td><%=l district.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_district_path(district), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      district_path(district),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_district_path,
            :class => 'btn btn-primary' %>

<%= link_to "Import districts", new_district_import_path, class: "btn btn-default" %>
