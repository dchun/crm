<%- model_class = District -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @district.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @district.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:college_readiness_score) %>:</strong></dt>
  <dd><%= @district.college_readiness_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tested_ap) %>:</strong></dt>
  <dd><%= @district.tested_ap %></dd>
  <dt><strong><%= model_class.human_attribute_name(:passed_ap) %>:</strong></dt>
  <dd><%= @district.passed_ap %></dd>
  <dt><strong><%= model_class.human_attribute_name(:math_score) %>:</strong></dt>
  <dd><%= @district.math_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:math_proficient) %>:</strong></dt>
  <dd><%= @district.math_proficient %></dd>
  <dt><strong><%= model_class.human_attribute_name(:math_not_proficient) %>:</strong></dt>
  <dd><%= @district.math_not_proficient %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reading_score) %>:</strong></dt>
  <dd><%= @district.reading_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reading_proficient) %>:</strong></dt>
  <dd><%= @district.reading_proficient %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reading_not_proficient) %>:</strong></dt>
  <dd><%= @district.reading_not_proficient %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              districts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_district_path(@district), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              district_path(@district),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
