    <%= f.label :school_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :school_id, :class => 'text_field' %>
    </div>
  </div> -->

  <div class="control-group">
    <%= f.label :school, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :school, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contacts_path, :class => 'btn' %>
  </div>
<% end %>
