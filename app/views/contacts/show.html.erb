<%- model_class = Contact -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>First Name</strong></dt>
  <dd> <%= @contact.fname %></dd>
  <dt><strong>Last Name</strong></dt>
  <dd> <%= @contact.lname %></dd>
  <dt><strong>Email</strong></dt>
  <dd> <%= @contact.email %></dd>
  <dt><strong>Salutation</strong></dt>
  <dd> <%= @contact.salutation %></dd>
  <dt><strong>Position</strong></dt>
  <dd> <%= @contact.position %></dd>
  <dt><strong>Role</strong></dt>
  <dd> <%= @contact.role %></dd>
  <dt><strong>School</strong></dt>
  <dd> <%= @contact.school.name if @contact.school.present? %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contacts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contact_path(@contact), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contact_path(@contact),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
