<%- model_class = EquivalentTerm -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:input) %></th>
      <th><%= model_class.human_attribute_name(:output) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @equivalent_terms.each do |equivalent_term| %>
      <tr>
        <td><%= link_to equivalent_term.id, equivalent_term_path(equivalent_term) %></td>
        <td><%= equivalent_term.input %></td>
        <td><%= equivalent_term.output %></td>
        <td><%=l equivalent_term.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_equivalent_term_path(equivalent_term), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      equivalent_term_path(equivalent_term),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_equivalent_term_path,
            :class => 'btn btn-primary' %>
