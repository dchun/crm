<%- model_class = EquivalentTerm -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:input) %>:</strong></dt>
  <dd><%= @equivalent_term.input %></dd>
  <dt><strong><%= model_class.human_attribute_name(:output) %>:</strong></dt>
  <dd><%= @equivalent_term.output %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              equivalent_terms_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_equivalent_term_path(@equivalent_term), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              equivalent_term_path(@equivalent_term),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
